<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Data</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body class="bg-dark text-white">

    <section class="view-section py-5">
        <div class="container">
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Order ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Contact</th>
                            <th scope="col">City</th>
                            <th scope="col">Zip</th>
                            <th scope="col">Address</th>
                            <th scope="col">Status</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach((person)=> { %>

                            <tr>
                                <th scope="row">
                                    <%= person.id %>
                                </th>
                                <td>
                                    <%= person.name %>
                                </td>
                                <td>
                                    <%= person.email %>
                                </td>
                                <td>
                                    <%= person.phone %>
                                </td>
                                <td>
                                    <%= person.city %>
                                </td>
                                <td>
                                    <%= person.zip %>
                                </td>
                                <td>
                                    <%= person.address %>
                                </td>
                                <td>
                                    <% if(person.check=='on' ){ %>
                                        <span class="text-success fw-semibold">Deleverd</span>

                                        <% } else{ %>
                                            <span class="text-danger fw-semibold">Pendding</span>
                                            <% } %>
                                </td>
                                <td class="d-flex justify-content-between">
                                    <a href="/editData/<%= person.id %>">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <a style="color: red;" href="/deletData/<%= person.id %>">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>

                <div class="col-12 p-0 mt-5">
                    <a href="/" class="btn btn-primary">
                        Back To Order
                    </a>
                </div>
            </div>
        </div>
    </section>

</body>

</html>